  #include<iostream> 
using namespace std;

void main()
{
	setlocale(LC_ALL, "Rus");     

	cout << "ключевое слово sizeof" << NEW_LINE;

	//sizeof взвращает длину в байтах чего либо, абсолютно чего-либо
	//его очень удобно и использовать когда хочешь вывести переменные из массива
	//вот синтаксис
	cout << sizeof(int) << NEW_LINE;


	int arr4[]{ 5,79,45,78,7777 };


	for (int i = 0; i < (sizeof(arr4) / sizeof(arr4[0])); i++)
	{
		cout << arr4[i] << NEW_LINE;

	}
}
