	for (int i = 0; i < ROWS; i++)
	{
		for (int j = 0; j < COLS; j++)
		{
			twomass[i][j] = rand() % 10;

		}
	}
	for (int i = 0; i < ROWS; i++)
	{
		for (int j = 0; j < COLS; j++)
		{
			cout << twomass[i][j] << TAB;


		}
		cout << NEW_LINE;
	}



