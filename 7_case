#include<iostream> 
using namespace std;

void main()
{
	setlocale(LC_ALL, "Rus");     

	cout << "Оператор SWITCH" << NEW_LINE;
	//Оператор множетсвенного выбора switch
	// синтаксис оператора switch
	/*

	switch (выражениe)
	{
	case значение1:
	действие1 ;
	break;
	case значение2:
	действие2 ;
	break;
	case значение3:
	действие3 ;
	break;

	(до бесконечности действий)

	default:
	действие_по_умолчанию;
	break;
	}

	*/
	int x, y, z;

	cout << "Введите два числа:" << NEW_LINE;
	cin >> x >> y;

	cout << "Какое действие вы хотите совершить? " << NEW_LINE << "1. сложение" << NEW_LINE << "2. вычитание" << NEW_LINE << "3. умножение" << NEW_LINE << "4. деление" << NEW_LINE;
	cin >> z;

	switch (z)
	{
	case 1:
	{
		cout << "Вот результат:" << NEW_LINE;
		cout << x + y << NEW_LINE;
		break;
	}
	case 2:
	{
		cout << "Вот результат:" << NEW_LINE;
		cout << x - y << NEW_LINE;
		break;
	}
	case 3:
	{
		cout << "Вот результат:" << NEW_LINE;
		cout << x * y << NEW_LINE;
		break;
	}
	case 4:
	{
		cout << "Вот результат:" << NEW_LINE;
		cout << x / y << NEW_LINE;
		break;
	}
	default:
	{
		cout << "У меня возник вопрос, ты умеешь читать???" << NEW_LINE;
		break;

	}

	}
}
